<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.lightspace.manage_course.dao.CourseMapper">
    <select id="findCourseListPage" resultType="com.lightspace.framework.domain.course.ext.CourseInfo" parameterType="com.lightspace.framework.domain.course.request.CourseListRequest">
        SELECT
        course_base.*,
        (SELECT pic FROM course_pic where courseid = course_base.id) pic
        FROM
        course_base
    </select>

  <select id="findCourseBaseById" parameterType="java.lang.String"
          resultType="com.lightspace.framework.domain.course.CourseBase">
        select * from course_base where id = #{id}
    </select>

  <select id="findCourseList" resultType="com.lightspace.framework.domain.course.CourseBase">
       select * from course_base
    </select>
</mapper>
